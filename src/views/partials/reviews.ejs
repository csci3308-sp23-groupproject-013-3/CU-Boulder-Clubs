<div class="reviews-section">
    <h2>Reviews</h2>
  
    <% if (reviews && reviews.length > 0) { %>
      <ul class="reviews-list">
        <% reviews.forEach(function(review) { %>
          <li class="review-item">
            <p class="review-text"><%= review.text %></p>
            <p class="review-rating"><%= review.rating %> stars</p>
            <p class="review-user"><%= review.user.name %></p>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No reviews yet.</p>
    <% } %>
  
    <% if (currentUser) { %>
      <h3>Leave a Review</h3>
  
      <form id="review-form" action="/clubs/<%= club._id %>/reviews" method="POST">
        <div class="form-group">
          <label for="review-text">Review</label>
          <textarea id="review-text" name="review[text]" rows="5"></textarea>
        </div>
        <div class="form-group">
          <label for="review-rating">Rating</label>
          <select id="review-rating" name="review[rating]">
            <option value="1">1 star</option>
            <option value="2">2 stars</option>
            <option value="3">3 stars</option>
            <option value="4">4 stars</option>
            <option value="5">5 stars</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    <% } else { %>
      <p>Please log in to leave a review.</p>
    <% } %>
  </div>
  