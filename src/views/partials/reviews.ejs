<div class="container">
  <body class="page-reviews">
    <h2>Reviews</h2>
    <% if (reviews.length === 0) { %>
      <p>No reviews yet.</p>
    <% } else { %>
      <div class="row">
        <% reviews.forEach(function(review) { %>
          <div class="col-md-6">
            <div class="card my-3">
              <div class="card-body">
                <h5 class="card-title"><%= review.title %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= review.author %></h6>
                <p class="card-text"><%= review.content %></p>
                <p class="card-text rating"><%= review.rating %> stars</p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>

  </body>
</div>
